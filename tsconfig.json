{
  "compilerOptions": {
    "target": "es2018",                                  
    "module": "commonjs",
    "allowJs": true,                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,       
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "strict": false,
    "outDir": "dist/",                            
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*.ts"
  ]
}
